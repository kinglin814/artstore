<div class="row">
	<div class="col-md-12">
		<h2>訂單明細</h2>

		<table class="table table-bordered">
			<thead>
				<tr>
					<th width="80%">商品明細</th>
					<th>數量</th>
					<th>單價</th>
				</tr>
			</thead>
			<tbody>
				<% @order_items.each do |item| %>
					<tr>
						<td><%= item.product_name %></td>
						<td><%= item.quantity %></td>
						<td><%= item.price %></td>
					</tr>
				<% end %>
			</tbody>
		</table>

		<div class="total clearfix">
			<span class="pull-right">
				<span>總計 <%= @order.total %> NTD </span>
			</span>
		</div>

		<hr>
		<h2>訂單資訊</h2>
			<table class="table table-striped table-bordered">
				<tbody>
					<tr>
						<td>訂購人</td>
					</tr>
					<tr>
						<td><%= @order_info.billing_name %> - <%= @order_info.billing_address %></td>
					</tr>
					<tr>
						<td>收件人</td>
					</tr>
					<tr>
						<td><%= @order_info.shipping_name %> - <%= @order_info.shipping_address %></td>
					</tr>
				</tbody>
			</table>
			<% if !@order.is_paid? %>
				<div class="pull-right">
					<%= link_to "信用卡付款", pay_by_card_order_path(@order.token), method: :post, class: "btn btn-danger"  %>
					<%= link_to "ATM付款", "#", class: "btn btn-danger"  %>
				</div>
			<% else %>
				<p class="text-center">此訂單已完成付款！</p>
			<% end %>
	</div>
</div>